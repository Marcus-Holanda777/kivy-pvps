#:import utils kivy.utils
MDScreenManager:
    AppLogin:
    AppCriar:
    AppCardZona:
    AppLista:
    AppListaNaoVerificados:
    AppListaVerificados:
    AppdEditVer:

<AppLogin>:
    name: 'applogin'
    txt_login: login
    txt_matricula: matricula
    icon_login: eye
    MDFloatLayout:
        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: root.estado
        MDIcon:
            icon: 'account-box'
            pos_hint: {'center_x': .5, 'center_y': .8}
            font_size: '130sp'
        MDTextField:
            id: matricula
            icon_right: "shield-check"
            hint_text: "Matricula"
            size_hint_x: .75
            pos_hint: {'center_x': .5, 'center_y': .6}
            multiline: False
            max_text_length: 20
            input_type: 'number'
            input_filter: 'int'
        MDRelativeLayout:
            size_hint_x: .75
            pos_hint: {"center_x": .5, "center_y": .45}
            MDTextField:
                id: login
                password: True
                icon_left: "key-variant"
                hint_text: "Senha"
                pos_hint: {'center_y': .5}
                multiline: False
                max_text_length: 20
            MDIconButton:
                id: eye
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: login.width - self.width + dp(4), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    login.password = False if login.password is True else True

        MDTextButton:
            text: 'Redefinir senha.'
            pos_hint: {'center_x': .72, 'center_y': .34}
        MDFillRoundFlatIconButton:
            text: 'ENTRAR'
            icon: "login"
            size_hint_x: .75
            halign: 'left'
            pos_hint: {'center_x': .5, 'center_y': .25}
            on_release:
                root.start_second_thread()
        MDFillRoundFlatIconButton:
            text: 'CRIAR'
            icon: "plus-circle"
            md_bg_color: utils.get_color_from_hex('#276880')
            size_hint_x: .75
            halign: 'left'
            pos_hint: {'center_x': .5, 'center_y': .13}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "appcriar"

<AppCriar>:
    name: 'appcriar'
    txt_login: login
    txt_matricula: matricula
    txt_email: email
    icon_login: eye

    MDFloatLayout:
        MDIconButton:
            icon: 'arrow-left-bold-circle'
            icon_size: '45sp'
            pos_hint: {'center_y': .9}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "applogin"
        MDLabel:
            text: 'NOVO CADASTRO'
            halign: 'center'
            font_style: 'H6'
            size_hint_x: .75
            pos_hint: {'center_x': .5, 'center_y': .85}
        MDTextField:
            id: matricula
            icon_right: "shield-check"
            hint_text: "Matricula"
            size_hint_x: .75
            pos_hint: {'center_x': .5, 'center_y': .7}
            multiline: False
            max_text_length: 20
            input_type: 'number'
            input_filter: 'int'
        MDTextField:
            id: email
            icon_right: "email"
            hint_text: "Email"
            size_hint_x: .75
            pos_hint: {'center_x': .5, 'center_y': .55}
            multiline: False
            max_text_length: 50
        MDRelativeLayout:
            size_hint_x: .75
            pos_hint: {"center_x": .5, "center_y": .4}
            MDTextField:
                id: login
                password: True
                icon_left: "key-variant"
                hint_text: "Senha"
                pos_hint: {'center_y': .5}
                multiline: False
                max_text_length: 20
            MDIconButton:
                id: eye
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: login.width - self.width + dp(4), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    login.password = False if login.password is True else True
        MDDropDownItem:
            id: drop_item
            pos_hint: {'center_x': .5, 'center_y': .25}
            text: 'Deposito 1'
            on_release: app.sel_deposito()
        MDFillRoundFlatIconButton:
            text: 'CRIAR'
            icon: "plus-circle"
            size_hint_x: .75
            halign: 'left'
            md_bg_color: utils.get_color_from_hex('#276880')
            pos_hint: {'center_x': .5, 'center_y': .1}
            on_release:
                app.criar_cadastro()


<AppCardZona>:
    name: 'appcardzona'
    MDFloatLayout:
        MDLabel:
            id: lbl_deposito
            theme_text_color: "Hint"
            font_size: '22sp'
            halign: 'right'
            size_hint_x: .95
            pos_hint_x: None
            pos_hint: {'center_y': .92}
        MDIconButton:
            icon: 'arrow-left-bold-circle'
            icon_size: '45sp'
            pos_hint: {'center_y': .9}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "applogin"
        MDRectangleFlatIconButton:
            id: btn_naover
            name: 'cardnaover'
            text: 'NAO VERIFICADOS'
            theme_text_color: "Custom"
            text_color: "white"
            line_color: "white"
            md_bg_color: utils.get_color_from_hex('#9C2780')
            theme_icon_color: "Custom"
            icon_color: 'white'
            size_hint: .9, .2
            pos_hint: {'center_x': .5, 'center_y': .6}
            padding: 20
            icon: 'notebook-check-outline'
            icon_size: "64sp"
            font_size: '20sp'
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "applistazona"
                app.cria_lista_zona()
        
        MDRectangleFlatIconButton:
            id: btn_ver
            name: 'cardver'
            text: '         VERIFICADOS'
            theme_text_color: "Custom"
            text_color: "white"
            line_color: "white"
            md_bg_color: utils.get_color_from_hex('#603689')
            theme_icon_color: "Custom"
            icon_color: 'white'
            size_hint: .9, .2
            pos_hint: {'center_x': .5, 'center_y': .37}
            padding: 20
            icon: 'notebook-check'
            icon_size: "64sp"
            font_size: '20sp'
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "applistazona"
                app.cria_lista_zona(True)

        MDLabel:
            id: lbl_progess
            halign: "center"
            text: "100 %"
            theme_text_color: "Hint"
            font_size: "22sp"
            pos_hint_x: None
            pos_hint: {"center_y": .15}
        MDProgressBar:
            id: progresstotal
            value: 50
            pos_hint: {"center_x": .5, "center_y": .10}
            size_hint_x: .9

<AppLista>:
    name: 'applistazona'
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            adaptive_height: True
            MDIconButton:
                icon: 'arrow-left'
                theme_icon_color: "Custom"
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "appcardzona"
            MDIconButton:
                icon: 'magnify'
                theme_icon_color: "Custom"
            MDTextField:
                id: search_field
                hint_text: 'Pesquisa por zona de separacao'
                # on_text: root.filtra_zona(root.zona, root.tipo, self.text, True)
        MDScrollView:
            scroll_timeout : 100
            MDList:
                id: md_list
                padding: 0

<CustomLista>:
    IconRightWidget:
        icon: 'text-box-edit-outline'
        on_release:
            root.app_editar()


<AppListaNaoVerificados>:
    name: 'applistazonanaover'
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            adaptive_height: True
            MDIconButton:
                icon: 'arrow-left'
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "applistazona"
                    app.cria_lista_zona()
            MDIconButton:
                icon: 'magnify'
            MDTextField:
                id: search_field
                hint_text: 'Pesquisa por produto'
                on_text: app.filtra_zona(app.zona, app.tipo, self.text, True)


        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                padding: 0
                default_size: None, dp(80)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'


<AppListaVerificados>:
    name: 'applistazonaver'
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            adaptive_height: True
            MDIconButton:
                icon: 'arrow-left'
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "applistazona"
                    app.cria_lista_zona(True)
            MDIconButton:
                icon: 'magnify'
            MDTextField:
                id: search_field
                hint_text: 'Pesquisa por produto'
                on_text: app.filtra_zona(app.zona, app.tipo, self.text, True)

        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                padding: 0
                default_size: None, dp(80)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

<AppdEditVer>:
    name: 'appdeditver'
    MDFloatLayout:
        MDIconButton:
            icon: 'arrow-left-bold-circle'
            icon_size: '45sp'
            pos_hint: {'center_y': .9}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = app.app_atual
                
        MDLabel:
            id: id_prod
            halign: 'center'
            font_size: '22sp'
            bold: True
            pos_hint: {'center_x': .5, 'center_y': .9}
        MDLabel:
            id: endereco
            halign: 'center'
            font_size: '22sp'
            bold: True
            pos_hint: {'center_x': .5, 'center_y': .85}
        MDLabel:
            id: nome
            halign: 'center'
            font_size: '22sp'
            bold: True
            pos_hint: {'center_x': .5, 'center_y': .8}
        MDTextField:
            id: quantidade
            hint_text: "quantidade"
            size_hint_x: .75
            pos_hint: {'center_x': .5, 'center_y': .65}
            multiline: False
            input_type: 'number'
            input_filter: 'int'
            on_text: 
                root.calcula_total()
        MDTextField:
            id: emb
            hint_text: "embalagem"
            text: "1"
            size_hint_x: .75
            pos_hint: {"center_x": .5, "center_y": .55}
            multiline: False
            input_type: 'number'
            input_filter: 'int'
            on_text:
                root.calcula_total()
        MDLabel:
            text: "TOTAL"
            halign: "center"
            font_size: '20sp'
            pos_hint: {"center_x": .5, "center_y": .45}
        MDLabel:
            id: total
            halign: "center"
            text: "0"
            font_size: '22sp'
            size_hint_x: .75
            pos_hint: {"center_x": .5, "center_y": .4}
        MDRelativeLayout:
            size_hint_x: None
            height: validade.height
            size_hint_x: .75
            pos_hint: {"center_x": .5, "center_y": .4}
            MDTextField:
                id: validade
                hint_text: "validade"
                pos_hint: {"center_y": .44}
                multiline: False
            MDIconButton:
                icon: 'calendar'
                pos_hint: {"center_y": .44}
                pos: validade.width - self.width + dp(8), 0
                on_release: app.show_data()
            
      

        MDFillRoundFlatIconButton:
            id: btneditar
            text: 'SALVAR'
            icon: "login"
            size_hint_x: .75
            halign: 'left'
            pos_hint: {'center_x': .5, 'center_y': .15}
            on_release: app.atualizar()